<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>agregarDocente</servlet-name>
        <servlet-class>Controlador.AgregarDocente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarDocente</servlet-name>
        <servlet-class>Controlador.ListarDocente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarDocente</servlet-name>
        <servlet-class>Controlador.ModificarDocente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscarDocente</servlet-name>
        <servlet-class>Controlador.BuscarDocente</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListarDocente</servlet-name>
        <url-pattern>/Administracion/Alumnos/ListarDocente.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificarDocente</servlet-name>
        <url-pattern>/Administracion/Docentes/ModificarDocente.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>agregarDocente</servlet-name>
        <url-pattern>/Administracion/Docentes/AgregarDocente.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarDocente</servlet-name>
        <url-pattern>/Administracion/Docentes/BuscarDocente.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
